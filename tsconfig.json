{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": ["babel_generator"],
    "typeRoots": ["node_modules/@types", "src/**/*.d.ts"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"],
  "lib": ["es2015"]
}
